<form method="post" {{action 'save' on='submit'}}>
  <div class="form-group">
    <label for="hostname">Hostname:</label>
    {{input class="form-control" id="hostname" maxlength="255" value=model.hostname type="text" required=true}}
  </div>

  <div class="form-group">
    <label for="description">Description:</label>
    {{input class="form-control" id="description" maxlength="255" value=model.description type="text" required=true}}
  </div>

  <div class="grid grid--12of12 grid-sm--6of12">
    <div class="grid-cell form-group">
      <label for="typeId">Type:</label>
      <select class="form-control" id="typeId" name="typeId">
        <option value="0">-- none --</option>
        <option value="5">Accesspoint</option>
        <option value="4">Drucker</option>
        <option value="15">Dynamischer Client</option>
        <option value="3">Firewall</option>
        <option value="13">Fixe Workstation</option>
        <option value="10">Hostsystem</option>
        <option value="6">IP-Telefon</option>
        <option value="7">Management Interfaces</option>
        <option value="8">Monitoringhardware</option>
        <option value="14">Notebook</option>
        <option value="2">Router</option>
        <option value="9" selected="selected">Server</option>
        <option value="16">Storage-Ger√§te</option>
        <option value="1">Switch</option>
        <option value="11">Thinclient</option>
        <option value="12">Virtueller Server</option>
      </select>
    </div>

    <div class="grid-cell form-group">
      <label for="wiki">Wiki:</label>
      {{input id="wiki" class="form-control" value=model.wiki}}
    </div>

    <div class="grid-cell form-group">
      <label for="IPv4">IPv4:</label>
      {{input class="form-control" id="IPv4" value=model.ipv4 type="text" required=true}}
    </div>

    <div class="grid-cell form-group">
      <label for="IPv6">IPv6:</label>
      {{input class="form-control" id="IPv6" value=model.ipv6 type="text" required=true}}
    </div>

    <div class="grid-cell form-group">
      <label for="osId">Operating System:</label>
      <select class="form-control" id="osId" name="osId" required>
        <option value="">Please choose</option>
        <option value="1">AIX</option>
        <option value="2">Amiga</option>
        <option value="3">Apple</option>
        <option value="4">BeOS</option>
        <option value="22">Citrix</option>
        <option value="5">Debian</option>
        <option value="6">FreeBSD</option>
        <option value="24">Gentoo</option>
        <option value="7">HP-UX</option>
        <option value="8">IRIX</option>
        <option value="9" selected="selected">Linux</option>
        <option value="10">Mac</option>
        <option value="11">Mandrake</option>
        <option value="12">Novell</option>
        <option value="13">OpenBSD</option>
        <option value="23">Other</option>
        <option value="14">Red Hat</option>
        <option value="15">Router</option>
        <option value="16">Slackware</option>
        <option value="17">Sun</option>
        <option value="21">SuSE</option>
        <option value="18">Switch</option>
        <option value="19">Ubuntu</option>
        <option value="20">Windows</option>
      </select>
    </div>

    <div class="grid-cell form-group">
      <label for="osVersionId">OS version:</label>
      <select id="osVersionId" name="osVersionId" class="form-control">
      </select>
    </div>

    <div class="grid-cell form-group">
      <label for="dependencyId">Depends on:</label>
      <select class="form-control" id="dependencyId" name="dependencyId">
        <option label="none" value="0">-- none --</option>
        <option value="18">BehindSatelliteTest</option>
        <option value="4">Host 1</option>
        <option value="5">Host 1.1</option>
        <option value="6">Host 2</option>
        <option value="7">Host 2.1</option>
        <option value="8">Host 3</option>
        <option value="9">Host 3.1</option>
        <option value="10">Host 3.2</option>
        <option value="11">Host 4</option>
        <option value="12">Host 5</option>
        <option value="17">NewSatelliteTest</option>
        <option value="16">vm-test-haaans-02.adfinis-sygroup.ch</option>
      </select>
    </div>

    <div class="grid-cell form-group">
      <label for="satelliteId">Behind satellite:</label>
      <select class="form-control" id="satelliteId" name="satelliteId">
        <option label="none" value="0">-- none --</option>
        <option value="17">NewSatelliteTest</option>
      </select>
    </div>

    <div class="grid-cell checkbox">
      <input id="isSatellite" class="form-control" type="checkbox">
      <label for="isSatellite">Is a satellite</label>
    </div>

    <div class="grid-cell checkbox">
      <input id="itemEnabled" class="form-control" type="checkbox" checked>
      <label for="itemEnabled">Is enabled</label>
    </div>
  </div>

  <h3>Contract</h3>

  <div class="grid grid--12of12 grid-sm--6of12">
    <div class="grid-cell form-group">
      <label for="customerId">Customer</label>
      <select class="form-control" id="customerId" name="customerId" required>
        <option value="1" selected="selected">All customers</option>
      </select>
    </div>
    <div class="grid-cell form-group">
      <label for="slaId">Alert Scheduler:</label>
      <select class="form-control" id="slaId" name="slaId" required>
        <option value="0">Inherit (No Alarm)</option>
        <option value="3">Nightshift</option>
        <option value="1">No Alarm</option>
        <option value="2" selected>Premium</option>
      </select>
    </div>
    <div class="grid-cell checkbox">
      <input id="checkHostAlive" class="form-control" type="checkbox" checked>
      <label for="checkHostAlive">Check host alive</label>
    </div>
    <div class="grid-cell form-group">
      Whether to check the availability of the host.
    </div>
  </div>

  <h3>Comment&nbsp;<i title="Anything special with this host?" class="fa fa-info-circle"></i></h3>

  <p>
    <textarea name="comment" id="hostComment" class="form-control"></textarea>
  </p>

  <h3>Password&nbsp;<i title="The host password is required to download nrpe and satellite export files" class="fa fa-info-circle"></i></h3>

  <p>
    The current password is: <span>6frnj10IaBXFXGuRGq192WTYDf9eCvnJ</span>
    <br>
    Set a new one: <a href="#" class="fa fa-refresh" id="host-4"></a>
  </p>

  <p>
    <span class="label label-danger">Caution</span> If you change this password you most probably need to login to the server and configure the new one.
  </p>

  <div class="flex-grow">
    {{#link-to 'manage.hosts.list' class='btn'}}
      Cancel
    {{/link-to}}
    &nbsp;
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>
