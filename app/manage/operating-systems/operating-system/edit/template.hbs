<form method="post" {{action 'save' on='submit'}}>
  <div class="form-group">
    <label for="name">Name:</label>
    {{input class="form-control" id="name" maxlength=255 value=model.name type="text" required=true}}
  </div>

  <div class="form-group">
    <label for="logo">Logo:</label>
    {{input class="form-control" id="logo" value=model.logo type="text"}}
  </div>

  <div class="flex-grow">
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>
