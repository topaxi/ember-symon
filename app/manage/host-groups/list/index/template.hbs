{{#sy-list model=model loading=loading search=(action 'updateFilter') as |section model|}}
  {{#if (eq section 'actions')}}
    {{#link-to 'manage.host-groups.new' class='btn btn-success'}}
      <i class="fa fa-plus"></i>&nbsp;New host group
    {{/link-to}}
  {{else if (eq section 'header')}}
    <th>Customer</th>
    <th>Host group name</th>
    <th class="visible-lg">Description</th>
  {{else if (eq section 'footer')}}
    <td colspan="5">
      {{pagination-pager current=page count=totalPages change=(action 'pageChanged')}}
    </td>
  {{else if (eq section 'empty')}}
    <tr class="warning"><td colspan="5">No host group found</td></tr>
  {{else if (eq section 'row')}}
    <tr>
      <td>{{model.customer.name}}</td>
      <td>
        {{#link-to 'manage.host-groups.host-group' model.id}}
          {{model.name}}
        {{/link-to}}
        <br>
        {{model.ipv4}}
      </td>
      <td class="visible-lg">
        {{model.description}}
      </td>
    </tr>
  {{/if}}
{{/sy-list}}
